<Window x:Class="DatabazovyServis.DatabaseConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabazovyServis"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Database Connect" Height="180" Width="180" Closed="IsClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Účet k databázy" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label  Content="Název" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="Username" Text="stxxxxx" Height="20" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Heslo" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="Password" Text="Heslo" Height="20" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Grid.Row="3" Content="Potvrď" Width="50" Margin="5" Click="Button_Database_Connect"/>
        <Button Grid.Row="4" Content="Stormo" Width="50" Click="Button_Storno"/>
    </Grid>
</Window>
